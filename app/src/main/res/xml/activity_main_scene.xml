<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@id/playlistOne"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="radius"
                motion:customDimension="16dp" />
        </Constraint>
        <Constraint
            android:id="@id/songList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/playlistOne" />
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/middle"
        motion:deriveConstraintsFrom="@id/start">
        <Constraint
            android:id="@id/playlistOne"
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="radius"
                motion:customDimension="0dp" />
        </Constraint>
        <Constraint
            android:id="@id/songList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/playlistOne" />
    </ConstraintSet>
    <ConstraintSet
        android:id="@+id/end"
        motion:deriveConstraintsFrom="@id/middle">
        <Constraint
            android:id="@id/playlistOne"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <Transition
        android:id="@+id/startToMiddle"
        motion:constraintSetEnd="@id/middle"
        motion:constraintSetStart="@id/start">
        <OnClick
            motion:clickAction="toggle"
            motion:targetId="@id/playlistOne" />
    </Transition>

    <Transition
        android:id="@+id/middleToEnd"
        motion:constraintSetEnd="@id/end"
        motion:constraintSetStart="@id/middle">
        <OnSwipe

            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/playlistOne"
            motion:touchAnchorSide="bottom" />
    </Transition>


</MotionScene>
