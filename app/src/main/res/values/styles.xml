<resources>

    <style name="Widget" />

    <style name="Widget.MusicPlaylist.CardItem" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/yellow</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Widget.MusicPlaylist.CardIcon" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="elevation">0dp</item>
        <item name="borderWidth">0dp</item>
        <item name="backgroundTint">@color/neutral_100</item>
    </style>

    <style name="Widget.MusicPlaylist.CardIcon.Nav" parent="Widget.MusicPlaylist.CardIcon">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="tint">@color/neutral_200</item>
    </style>


    <style name="Widget.MusicPlaylist.CardIconDark" parent="Widget.MusicPlaylist.CardIcon">
        <item name="backgroundTint">@color/dark_30</item>
        <item name="tint">@color/neutral_200</item>
    </style>

    <style name="Widget.MusicPlaylist.CardIconDark.Left">
        <item name="android:layout_marginEnd">20dp</item>
    </style>

    <style name="Widget.MusicPlaylist.CardIconDark.Right">
        <item name="android:layout_marginStart">20dp</item>
    </style>

</resources>